    #questionContainer {
      position: relative;
      width: 600px;
      height: 400px;
      margin: 50px auto;
      padding-top: 100px;
      background-color: #fff;
      border: 2px solid #e91e63;
      border-radius: 15px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    button {
      position: absolute;
      padding: 10px 20px;
      font-size: 16px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    #yesBtn {
      left: 150px;
      top: 200px;
      background-color: #4caf50;
      color: white;
    }

    #noBtn {
      left: 300px;
      top: 200px;
      background-color: #f44336;
      color: white;
    }

    #heartLoader {
      display: none;
      font-size: 24px;
      color: #e91e63;
    }

    #resultContainer {
      display: none;
      margin-top: 20px;
    }

    #gifResult {
      width: 300px;
      margin-top: 10px;
      border-radius: 12px;
    }
